<div class="columns">
  <div class="column is-half is-offset-one-quarter">
    <h1 class="title index-title is-4 has-text-centered">Sign Up</h1>
    <div class="box">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.text_field :username, autofocus: true, placeholder: "Username", class: "input is-warning" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "input is-warning" %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "input is-warning" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class: "input is-warning" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "button is-warning" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>